<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <TextView
        android:id="@+id/recycler_row_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanici email"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#0D1D77">
    </TextView>

    <ImageView
        android:id="@+id/recycler_row_imageview"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_launcher_background"></ImageView>

    <TextView
        android:id="@+id/recycler_row_user_yorumu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanici yorumu"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textColor="#9C27B0">
    </TextView>

</LinearLayout>